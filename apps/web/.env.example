# Public Appwrite endpoint
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://appwrite.g3netic.com/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=

# Server-side Appwrite API key (needed for SSR auth + membership checks)
# Never expose this to the browser.
APPWRITE_API_KEY=

# Custom session cookie used by the web app to store Appwrite session.secret
APPWRITE_SESSION_COOKIE=g3netic_session

# Optional cookie domain. Example: .g3netic.com
# APP_COOKIE_DOMAIN=

# Default IDs (bootstrap uses these unless overridden)
NEXT_PUBLIC_APPWRITE_DATABASE_ID=crypto
NEXT_PUBLIC_APPWRITE_SIGNALS_COLLECTION_ID=signals
NEXT_PUBLIC_APPWRITE_SIGNAL_ASSETS_BUCKET_ID=signal_assets

# sell.app webhooks (if implemented in web)
SELLAPP_WEBHOOK_SECRET=

# Discord OAuth linking
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_OAUTH_REDIRECT_URI=https://crypto.g3netic.com/api/auth/discord/callback
